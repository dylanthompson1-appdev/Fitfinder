


<h1>Pieces<h1>

<% all_pieces = Piece.all %>

<table>
<tr>
<td style="text-align:center">Name</td>
<td style="text-align:center">Image</td>
<td style="text-align:center">Brand</td>
<td style="text-align:center">Type</td>
<td></td>
</tr>
<% all_pieces.each do |a_piece|%>
  <tr>
    <td> <%= a_piece.name %></td>
    <td> <img src="<%= a_piece.image %>" alt="Image of the item" style="width:250px;height:auto;"></td>
    <td> <%= a_piece.brand %></td>
    <td> <%= a_piece.style %></td>
    <td> <a href="/pieces/<%=a_piece.id%>">Details</a></td>
  </tr>
  <% end %>
  </table>

  <div><a href="/create_piece">Don't see what you're looking for? Add it!</a></div>
